doctype html
html(lang="en")
    head
        include partials/header
        
    body.login 
        .contenedor-formulario  
            h1= namePage 
            if locals.messages   
                each category in Object.keys( locals.messages )
                    each error in messages[category]
                        .alerta(class=`${category}`)
                            p= error

            p Enter your email to restore your password 
            form.caja-login(method="POST" action="/users/restore-password")
                .campo  
                    label(for="email") E-mail
                    input(type="email" name="email" placeholder="Email")
                .campo.enviar   
                    input.boton(type="submit" value="send")
                .campo.acciones
                    a(href="/users/login") Go to log in
