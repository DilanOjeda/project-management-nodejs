doctype html
html(lang="en")
    head
        include partials/header
        
    body
        header.barra 
            h1 Project Manager 
            a(href="/users/close-session") Close Session 

        main.contenedor
            aside.contenedor-proyectos
                .panel.crear-proyecto
                    a(href="/new-project" class="boton") New project #{testingVariable}
                        span +
                .panel.lista-proyectos
                    h2 Projects 
                    ul#proyectos.proyectos

                        if ( projects.length ) 
                            each project in projects
                                li
                                    a(href=`/projects/${project.url}`)= project.name 
            block content 

            pre= vardump(projects)
    script(src="/dist/bundle.js") 